pipeline {
    agent any
    stages{
        stage('prompt for input ..') {
            steps {
                echo 'inout..'
            }
        }
        stage('trigger ansiible playbook') {
            steps {
                echo 'running oracle playbook...'
                ansiblePlaybook colorized: true, playbook: '/opt/ansible/rabobank/ansible//playbooks/postgresql.yml', sudoUser: null
            }
        }
    }
}
